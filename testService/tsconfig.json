{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "baseUrl": "./",
      "declaration": true,
      "sourceMap": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "outDir": "./build",
      "resolveJsonModule": true,
      "lib": [
        "es7"
      ],
      "esModuleInterop": true,
      "typeRoots": [
        "node_modules/@types"
      ]
    },
    "include": [
      "src/**/*.ts"
    ]
  }